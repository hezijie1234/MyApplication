<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/chkUseUsbHostApi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USB HOST API" />

        <Button
            android:id="@+id/btnTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.94"
            android:onClick="OnTestListener"
            android:text="Test" />

        <Button
            android:id="@+id/btnAutoTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.31"
            android:onClick="OnAutoTestListener"
            android:text="AutoTest" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvDeviceNode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Device Node:" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message:" />

    </LinearLayout>

    <EditText
        android:id="@+id/edtLog"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:gravity="center_vertical|top"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:text="asdfasdfasdfasfd" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnTestId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.80"
            android:onClick="OnTestIdListener"
            android:text="二代证测试" />

        <Button
            android:id="@+id/btnTestBeijingCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.80"
            android:onClick="OnTestBeijingCardListener"
            android:text="北京交通卡" />

        <ImageView
            android:id="@+id/imgIdPhoto"
            android:layout_width="102dp"
            android:layout_height="126dp"
            android:layout_weight="0.37" />

    </LinearLayout>

    <Button
        android:id="@+id/btnClearLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="OnClearLogListener"
        android:text="ClearLog" />

    <Button
        android:id="@+id/btnTestNtag203"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="OnTestNtag203Listener"
        android:text="TestNtag203" />

</LinearLayout>