<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingLeft="5dp"
    android:paddingRight="12dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@color/white">
    <ImageView
        android:id="@+id/item_recent_portrait"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/default_header"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:id="@+id/item_recent_hotdot"
        android:layout_width="18dp"
        android:layout_height="15dp"
        android:layout_alignRight="@id/item_recent_portrait"
        android:layout_alignTop="@id/item_recent_portrait"
        android:layout_marginRight="-6dp"
        android:layout_marginTop="-4dp"
        android:text="99"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="10sp"
        android:visibility="visible"
        android:background="@drawable/shape_red_dot"/>
    <TextView
        android:id="@+id/item_recent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:text="何子杰"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/item_recent_portrait"/>
    <TextView
        android:id="@+id/item_recent_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/gray3"
        android:textSize="12sp"
        android:text="中午 11:48"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/item_recent_portrait"
        >
        <TextView
            android:id="@+id/item_recent_draft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[草稿]"
            android:textColor="@color/red7"
            android:visibility="gone"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/item_recent_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="来信息啦"
            android:textColor="@color/gray1"/>

    </LinearLayout>
</RelativeLayout>