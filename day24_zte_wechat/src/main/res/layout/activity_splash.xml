<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash"
    tools:context="com.example.zte.day24_zte_wechat.view.activity.SplashActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <Button
        android:id="@+id/activity_splash_login_btn"
        android:layout_width="wrap_content"
        android:text="@string/login"
        android:textSize="20sp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/login_button_shape"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/activity_splash_register_btn"
        android:layout_width="wrap_content"
        android:text="@string/register"
        android:textSize="20sp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/register_button_shape"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />
    </RelativeLayout>
</FrameLayout>
